{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "SDL2",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"src\\Miscellaneous\\*.cpp",
				"src\\Entities\\*.cpp",
				"src\\Managers\\*.cpp",
				"src\\Components\\*.cpp",
				"src\\*.cpp",
				"-o",
				"build\\PathOfCPP.exe",
				"-I${workspaceFolder}/src/",
				"-I${workspaceFolder}/src/Miscellaneous/",
				"-I${workspaceFolder}/src/Managers/",
				"-I${workspaceFolder}/src/Components/",
				"-I${workspaceFolder}/src/Entities/",
				"-I${workspaceFolder}/sdk/sdl2/include/",
				"-L${workspaceFolder}/sdk/sdl2/lib/",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_image",
				"-lSDL2_ttf",
				"-lSDL2_mixer",//,
				//"-fconcepts"//,
				//"-mwindows"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}